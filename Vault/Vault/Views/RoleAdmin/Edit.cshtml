@model Vault.Models.EditRolemodel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_RoleAdminLayout.cshtml";
}
@using (Html.BeginForm())
{
    <input type="hidden" name="RoleName" value="@Model.Role.Name" />
    <div class="panel panel-primary well">
        <div class="panel-heading">Add to role</div>
        <div class="panel-body">
            <table class="table table-hover">
                @Html.Partial("NotRoleMembersPartial", Model.NonMembers)
            </table>
        </div>
    </div>

    <div class="panel panel-primary well">
        <div class="panel-heading">Delete from role</div>
        <div class="panel-body">
            <table class="table table-hover">
                @Html.Partial("RoleMembersPartial", Model.Members)
            </table>
        </div>
    </div>
    <p><input type="submit" value="Save" class="btn btn-success"/> @Html.ActionLink("Back","Index",null, new {@class="btn btn-default"})</p>
}