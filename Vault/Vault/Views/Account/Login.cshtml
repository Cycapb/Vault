@model Vault.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_UserAdminLayout.cshtml";
}

<div class="panel panel-info">
    <div class="panel-heading"></div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="panel-body">
            @Html.ValidationMessageFor(x=>x.Name)
            <div class="form-group">
                <label>Login:</label>
                @Html.TextBoxFor(x => x.Name, new {@class = "form-control", placeholder = "Login"})
            </div>
            @Html.ValidationMessageFor(x => x.Password)
            <div class="form-group">
                <label>Password:</label>
                @Html.PasswordFor(x => x.Password, new {@class = "form-control", placeholder = "Password"})
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Log in" class="btn btn-success"/>
        </div>
    }
</div>

