@model Vault.Models.VaultItemListModel
@{
    ViewBag.Title = "Items";
    Layout = "~/Views/Shared/_VaultLayout.cshtml";
}
<div class="panel panel-primary">
    <div class="panel-heading">Welcome to the vault</div>
    <div class="panel-body">
        <table class="table table-striped">
            <tr>
                <th>Name</th>
                <th>Content</th>
                <th>Action</th>
            </tr>
            @Html.Partial("VaultItemsPartial", Model)
        </table>
    </div>
    <div class="panel-footer">
        @if (Model.AccessRight == "Read")
        {
            if (Model.HasUserRole)
            {
                @Html.ActionLink("Back", "Index","Home", null, new { @class = "btn btn-default" })
            }
            else
            {
                @Html.ActionLink("Back", "VaultList", null, new { @class = "btn btn-default" })
            }
        }
        @if (Model.AccessRight == "Create")
        {
            if (Model.HasUserRole)
            {
                @Html.ActionLink("Create", "AddItem", new { id = Model.VaultId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Back", "Index","Home", null, new { @class = "btn btn-default" })
            }
            else
            {
                @Html.ActionLink("Create", "AddItem", new { id = Model.VaultId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Back", "VaultList", null, new { @class = "btn btn-default" })
            }
        }
    </div>
</div>